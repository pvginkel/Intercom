# Application configuration

CONFIG_DEVICE_MICROPHONE_GAIN_BITS=3

CONFIG_DEVICE_PB_PIN=33
CONFIG_DEVICE_LR_PIN=18
CONFIG_DEVICE_LG_PIN=17
CONFIG_DEVICE_MICROPHONE_WS_PIN=4
CONFIG_DEVICE_MICROPHONE_SCK_PIN=2
CONFIG_DEVICE_MICROPHONE_DATA_PIN=1
CONFIG_DEVICE_SPEAKER_WS_PIN=13
CONFIG_DEVICE_SPEAKER_SCK_PIN=14
CONFIG_DEVICE_SPEAKER_DATA_PIN=15

CONFIG_DEVICE_NETWORK_CONNECT_ATTEMPTS=5
CONFIG_DEVICE_CONFIG_ENDPOINT="http://iotsupport.home/esp32/config/%s.json"
CONFIG_MQTT_BROKER_URL="mqtt://192.168.178.190"
CONFIG_WIFI_SSID="Thing-Fish"
CONFIG_OTA_ENDPOINT="http://iotsupport.home/assets/intercom-ota.bin"
CONFIG_LOG_ENDPOINT="http://iotlogging.home/"

CONFIG_MQTT_PROTOCOL_5=y

# Setup flash

CONFIG_ESPTOOLPY_FLASHSIZE_8MB=y
CONFIG_PARTITION_TABLE_CUSTOM=y

# I2S

CONFIG_I2S_ENABLE_DEBUG_LOG=y

# SPIRAM

CONFIG_SPIRAM=y
CONFIG_SPIRAM_FETCH_INSTRUCTIONS=y
CONFIG_SPIRAM_RODATA=y
CONFIG_SPIRAM_SPEED_80M=y

# CPU speed and power management

CONFIG_PM_ENABLE=y
CONFIG_PM_DFS_INIT_AUTO=y
CONFIG_ESP_DEFAULT_CPU_FREQ_MHZ_240=y
